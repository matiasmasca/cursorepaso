<p id="notice"><%= notice %></p>

<h1>Listado de Ciudades</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">Población</th>
      <th scope="col">Provincia</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td scope="row"><%= city.id %></td>
        <td><%= city.name %></td>
        <td><%= city.city_population %></td>
        <td><%= city.province.name %></td>
        <td><%= link_to 'Mostrar', city %></td>
        <td><%= link_to 'Editar', edit_city_path(city) %></td>
        <td><%= link_to 'Eliminar', city, method: :delete, data: { confirm: '¿Esta seguro de borrar esto?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva ciudad', new_city_path, class: "btn btn-outline-primary" %>

